<%- include('../partials/head') %>


<body style="background-color: #121212;">
  <%- include('../partials/navbar', {pageUrl: pageUrl}) %>
  
  <h2 class="text-2xl ml-2 font-bold text-center text-white mt-10"> Details of <%= home.name %> </h2>

  <main class="container mx-auto bg-[#1F1F1F] shadow-lg text-white rounded-lg p-8 mt-6 max-w-6xl">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="rounded-lg overflow-hidden">
            <img src="<%= home.imageUrl %>" alt="<%= home.name %>" class="w-full h-96 object-cover">
        </div>
        
        <div class="space-y-6">
            <div class="border-b pb-4">
                <h3 class="text-2xl font-semibold mb-2">Description</h3>
                <p class=""><%= home.description %></p>
            </div>

            <div class="border-b pb-4">
                <h3 class="text-2xl font-semibold mb-2">Location</h3>
                <p class=""><%= home.location %></p>
            </div>
            
            <div class="border-b pb-4">
                <h3 class="text-2xl font-semibold mb-2">Price</h3>
                <p class=" text-xl font-bold">$<%= home.price %> / night</p>
            </div>
            
            <div class="border-b pb-4">
                <h3 class="text-2xl font-semibold mb-2">Rating</h3>
                <div class="flex items-center">
                    <span class="text-yellow-400 text-xl">â˜…</span>
                    <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
                </div>
            </div>
            <div> 
                
            </div>
            <%- include('../partials/favourite') %>
        </div>
    </div>
</main>

</body>
</html>